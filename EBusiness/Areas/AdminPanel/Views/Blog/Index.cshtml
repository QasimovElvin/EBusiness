@using EBusiness.Models
@using EBusiness.ViewModels
@model PaginateVM<Blog>

@{
    ViewData["Title"] = "Index";
    int count = ((Model.CurentPage - 1) * 3) + 1;
}
<div class="d-flex justify-content-end mr-2">
    <a type="submit" class="btn btn-success"asp-controller="Blog" asp-action="Create">Create Blog</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                               Image
                            </th>
                            <th>
                              Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                   <img src="~/assets/img/blog/@item.Image">
                                </td>
                                <td>
                                   @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a type="button" class="btn btn-warning" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </td>
                                <td>
                                    <a type="button" class="btn btn-danger" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                      <div class="mt-2">
                    <nav aria-label="...">
                        <ul class="pagination pagination-lg">
                          @for (int i = 1; i <= Model.CurentPage; i++)
                            {
                                <li class="page-item @(Model.CurentPage==i?"active":"") "><a class="page-link" asp-controller="Blog" asp-action="Index" asp-route-page="@i">@i</a></li>
                            }
                        </ul>
                    </nav>
                      </div>
            </div>
        </div>
    </div>
</div>
                    

